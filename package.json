{
  "name": "nisight",
  "displayName": "nisight",
  "description": "Neuro imaging viewer",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/nx10/nisight"
  },
  "bugs": {
    "url": "https://github.com/nx10/nisight/issues"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nisight.voxelviewer.refresh",
        "category": "NiSight",
        "title": "Refresh Voxel Viewer",
        "icon": "$(extensions-refresh)"
      }
    ],
    "customEditors": [
      {
        "viewType": "nisight.voxelviewer",
        "displayName": "Voxel Viewer",
        "selector": [
          {
            "filenamePattern": "*.nii.gz"
          },
          {
            "filenamePattern": "*.nii"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "nisight.surfaceviewer",
        "displayName": "Surface Viewer",
        "selector": [
          {
            "filenamePattern": "*.gii"
          },
          {
            "filenamePattern": "*.orig"
          },
          {
            "filenamePattern": "*.pial"
          },
          {
            "filenamePattern": "*.sphere"
          },
          {
            "filenamePattern": "*.white"
          },
          {
            "filenamePattern": "*.inflated"
          }
        ],
        "priority": "default"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "activeCustomEditorId == nisight.voxelviewer",
          "command": "nisight.voxelviewer.refresh",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "NiSight",
      "properties": {
        "nisight.pythonInterpreter": {
          "type": "string",
          "default": "python",
          "description": "Python interpreter location (nilearn package required)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@types/vscode-webview": "^1.57.1",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.2.2"
  }
}
